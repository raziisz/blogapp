{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h3>Adicionar categoria</h3>
<div class="card">
  <div class="card-body">
    <form action="/admin/categorias/nova" method="POST">
    <label for="nome" class="label-control">
      Nome
    </label>
    <input type="text" name="nome" id="nome" placeholder="Nome da Categoria" class="form-control">
    <label for="slug" class="label-control mt-1">
      Slug
    </label>
    <input type="text" name="slug" id="slug" placeholder="Slug da Categoria" class="form-control">
    <button type="submit" class="btn btn-success mt-2">Criar categoria</button>
    </form>
  </div>
</div>