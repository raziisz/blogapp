<h2>Lista de Categorias: </h2>
<hr>
<a href="/admin/categorias/addcategorias">
 <button class="btn btn-success">Nova Categoria</button>
</a>

{{#each categorias}}
  <div class="card mt-2">
    <div class="card-body">
      <h4>{{nome}}</h4>
      <small>Slug: {{slug}}</small><br>
      <small>Data de criação {{createdAt}}</small>
      <br>
      <a href="/admin/categorias/edit/{{_id}}">
       <button class="btn btn-primary mt-2">Editar categoria</button>
      </a>
      <form action="/admin/categorias/deletar" method="post">
        <input type="hidden" name="id" value="{{_id}}">
        <button class="btn btn-danger mt-2" type="submit">Deletar categoria</button>
      </form>
    </div>
  </div>
{{else}}
<h4 class="mt-2">Nenhuma categoria registrada</h4>
{{/each}}